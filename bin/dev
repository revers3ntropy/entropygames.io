#!/bin/bash

npm i -g http-server;

# start the development server
(
  cd server || exit;
  webpack;
);

bin/kill-server;
bin/kill-server 8000;

node --enable-source-maps server --logTo=dev.log --logLevel=4 --dbLogLevel=2 & # start the server in the background

http-server ./public_html -p 8000 -a localhost -c-1 &