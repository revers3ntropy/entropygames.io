#!/bin/bash

(
	cd bin || exit;
	npm i;
) &
(
	cd test || exit;
	npm i;
) &
(
	cd public_html/cdn || exit;
	npm i;
) &
(
	cd server || exit;
	npm i;
) & wait

mysql -u root << eof
    DROP DATABASE IF EXISTS entropygames_dev;
    CREATE DATABASE entropygames_dev
eof

mysql -u root entropygames_dev < ./sql/schema.sql